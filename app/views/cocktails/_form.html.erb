<div class="container">
  <div class="margin-form row d-flex justify-content-around align-items-center">
    <div class="form col-sm-10 m-2 col-md-4 d-flex flex-column justify-content-around align-items-center">
      <h1>Your cocktail</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-sm-3 col-md-2 text-center">
      <%= link_to "Back to index", root_path, class: "btn btn-primary", id:"btn-show" %>
    </div>
  </div>
</div>
