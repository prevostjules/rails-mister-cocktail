<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
     <%= link_to "Delete",
                          cocktail_dose_path(@cocktail, dose),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>


