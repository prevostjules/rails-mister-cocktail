<div class="container d-flex justify-content-center">
  <div class="margin-form row d-flex justify-content-around align-items-center">
    <div class="row d-flex flex-column justify-content-around align-items-center">
      <div class="form col-sm-12  col-md-10">
        <h1>Add an ingredient</h1>

          <%= simple_form_for [ @cocktail, @dose ] do |f| %>
            <%= f.input :description %>
            <%= f.association :ingredient %>
            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>

      </div>
    </div>
    <div class="col-sm-3 col-md-3 text-center">
      <%= link_to "Back to index", root_path, class: "btn btn-primary", id:"btn-show" %>
    </div>
  </div>
</div>
